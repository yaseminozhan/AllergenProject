@{
	Layout = null;
	ViewData["Title"] = "Barkod Tara";
}

<!DOCTYPE html>
<html lang="tr">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>@ViewData["Title"] - Love Green</title>
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
	<style>
		body {
			margin: 0;
			background: url('/images/bg-dalga.png') no-repeat center center;
			background-size: cover;
			font-family: 'Segoe UI', sans-serif;
			color: #184c35;
			min-height: 100vh;
		}

		.scan-box {
			background-color: rgba(255, 255, 255, 0.95);
			padding: 2rem 2.5rem;
			border-radius: 15px;
			box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
			max-width: 600px;
			margin: 5vh auto;
			text-align: center;
		}

		.btn-back {
			position: absolute;
			top: 20px;
			left: 20px;
		}

		.form-label {
			font-weight: 600;
		}
	</style>
</head>
<body>



	<!-- Ana Sayfa'ya Dön Butonu -->
	<a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary btn-back">
		⬅️ Ana Sayfa'ya Dön
	</a>

	<div class="d-flex align-items-center justify-content-center" style="min-height: 100vh;">
		<div class="scan-box">
			<h2 class="mb-4">📷 Barkod Okuma</h2>

			<form asp-action="Tara" method="post">
				<div class="mb-3">
					<label for="barkodNo" class="form-label">Barkod Numarası</label>
					<input type="text" name="barkodNo" id="barkodNo" class="form-control form-control-lg" placeholder="Barkod no girin..." required />
				</div>
				<button type="submit" class="btn btn-success btn-lg">Tara</button>
			</form>
			@if (TempData["Mesaj"] != null)
			{
				<div class="alert alert-warning mt-4">@TempData["Mesaj"]</div>

				@if (TempData["BarkodNo"] != null)
				{
					<a asp-action="YeniEkle" asp-controller="Urun" asp-route-barkod="@TempData["BarkodNo"]" class="btn btn-success mt-2">
						➕ Şimdi Ürün Ekle
					</a>
				}
			}
		</div>
	</div>

</body>

</html>
