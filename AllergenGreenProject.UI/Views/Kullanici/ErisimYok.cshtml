@{
    Layout = null;
    ViewData["Title"] = "Erişim Yok";
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Love Green</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />

    <style>
        body {
            margin: 0;
            background: url('/images/bg-dalga.png') no-repeat center center;
            background-size: cover;
            font-family: 'Segoe UI', sans-serif;
            color: #184c35;
            min-height: 100vh;
        }
    </style>
</head>

<body>

    <div class="container mt-5">
        <div class="alert alert-danger text-center">
            🚫 Bu sayfaya erişim izniniz bulunmamaktadır.
        </div>

        <div class="text-center mt-3">
            <a asp-controller="Home" asp-action="Index" class="btn btn-outline-primary">
                🏠 Ana Sayfaya Dön
            </a>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
