@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Love Green - Misafir</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        html, body {
            height: 100%;
            margin: 0;
            background: url('/images/bg-dalga.png') no-repeat center center;
            background-size: cover;
            font-family: 'Segoe UI', sans-serif;
            color: #184c35;
        }

        .container-fluid {
            height: 100vh;
        }

        .left-panel {
            background-color: rgba(255, 255, 255, 0.5);
            padding: 2rem 1.5rem;
            height: 100vh;
            display: flex;
            flex-direction: column;
            justify-content: start;
            border-radius: 0 25px 25px 0;
        }

        .info-btn {
            background: white;
            border: none;
            width: 100%;
            font-size: 1.25rem;
            font-weight: 600;
            margin-bottom: 1.5rem;
            padding: 1rem 1.5rem;
            border-radius: 15px;
            text-align: left;
            box-shadow: 0 2px 6px rgba(0,0,0,0.1);
            display: flex;
            gap: 0.8rem;
            align-items: center;
            color: #184c35;
        }

        .info-panel {
            background-color: rgba(255, 255, 255, 0.9);
            border-radius: 10px;
            padding: 1rem;
            font-size: 1rem;
            display: none;
            margin-bottom: 1.5rem;
        }

        .main-logo {
            margin: auto;
            text-align: center;
        }

            .main-logo img {
                width: 280px;
            }

            .main-logo h1 {
                font-size: 2.2rem;
                margin-top: 1rem;
                font-weight: bold;
                color: #184c35;
            }

        .user-panel {
            position: absolute;
            top: 30px;
            right: 30px;
            text-align: center;
        }

            .user-panel img {
                width: 40px;
                cursor: pointer;
            }

            .user-panel .btn {
                margin-top: 10px;
                width: 120px;
                font-weight: 600;
            }
    </style>
</head>

<body>
    <div class="container-fluid">
        <div class="row h-100">
            <!-- Sol Menü -->
            <div class="col-md-3 left-panel">
                <button class="info-btn" onclick="toggleInfo('info1')">🌟 Premium Üyelik</button>
                <div id="info1" class="info-panel">Premium üyelik ile özel içeriklere erişebilirsiniz.</div>

                <button class="info-btn" onclick="toggleInfo('info2')">❓ Hakkında</button>
                <div id="info2" class="info-panel">Love Green çevre dostu ürünleri analiz eden bir platformdur.</div>

                <button class="info-btn" onclick="toggleInfo('info3')">✉️ Bize Ulaşın</button>
                <div id="info3" class="info-panel">İletişim: destek@lovegreen.com</div>

                <button class="info-btn" onclick="toggleInfo('info4')">📄 Kullanım Koşulları</button>
                <div id="info4" class="info-panel">Lütfen kullanım koşullarını dikkatlice okuyunuz.</div>
            </div>

            <!-- Logo -->
            <div class="col-md-6 d-flex justify-content-center align-items-center">
                <div class="main-logo">
                    <img src="/images/logo.png" alt="Logo">
                    <h1>LOVE GREEN</h1>
                </div>
            </div>

            <!-- Kullanıcı Paneli -->
            <div class="col-md-3">
                <div class="user-panel">
                    <img src="https://img.icons8.com/ios-filled/50/184c35/user.png" onclick="toggleLoginRegisterButtons()" />

                    <div id="authButtons" class="d-none">
                        <a id="loginBtn" class="btn btn-success mb-2" asp-area="Identity" asp-page="/Account/Login">Giriş Yap</a><br />
                        <a id="registerBtn" class="btn btn-outline-success" asp-area="Identity" asp-page="/Account/Register">Üye Ol</a>
                    </div>
                </div>
            </div>

            <script>
                function toggleLoginRegisterButtons() {
                    const buttonsDiv = document.getElementById('authButtons');
                    buttonsDiv.classList.toggle('d-none');
                }
                             function toggleInfo(infoId) {
                    // Önce tüm info-panellerini kapatalım
                    const allPanels = document.querySelectorAll('.info-panel');
                    allPanels.forEach(panel => {
                        panel.style.display = 'none';
                    });

                    // Tıklanan paneli açalım
                    const panel = document.getElementById(infoId);
                    if (panel) {
                        panel.style.display = 'block';
                    }
                }
            </script>

</body>
</html>