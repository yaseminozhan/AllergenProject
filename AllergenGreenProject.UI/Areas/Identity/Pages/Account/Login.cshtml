@page
@model LoginModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Giriş Yap - Love Green</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            margin: 0;
            background: url('/images/bg-dalga.png') no-repeat center center;
            background-size: cover;
            font-family: 'Segoe UI', sans-serif;
            color: #184c35;
            height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .login-card {
            background-color: rgba(255, 255, 255, 0.9);
            padding: 2rem;
            border-radius: 15px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
            width: 100%;
            max-width: 400px;
        }

            .login-card h2 {
                margin-bottom: 1.5rem;
                text-align: center;
                font-weight: bold;
            }

        .form-control {
            margin-bottom: 1rem;
        }

        .btn-login {
            width: 100%;
            font-weight: 600;
        }
    </style>
</head>
<body>

    <div class="login-card">
        <h2>Giriş Yap</h2>

        @if (TempData["RegisterSuccessMessage"] != null)
        {
            <div class="alert alert-success">
                @TempData["RegisterSuccessMessage"]
            </div>
        }


        <form method="post">
            <input asp-for="Input.Email" class="form-control" placeholder="Kullanıcı Adı" required />
            <input asp-for="Input.Password" type="password" class="form-control" placeholder="Şifre" required />
            <button type="submit" class="btn btn-success btn-login">Giriş</button>
        </form>

        @if (Model.ErrorMessage != null)
        {
            <div class="alert alert-danger mt-2">@Model.ErrorMessage</div>
        }
    </div>

</body>
</html>
