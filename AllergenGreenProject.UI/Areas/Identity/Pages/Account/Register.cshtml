@page
@model RegisterModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Üye Ol - Love Green</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            margin: 0;
            background: url('/images/bg-dalga.png') no-repeat center center;
            background-size: cover;
            font-family: 'Segoe UI', sans-serif;
            color: #184c35;
            height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .register-card {
            background-color: rgba(255, 255, 255, 0.9);
            padding: 2rem;
            border-radius: 15px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
            width: 100%;
            max-width: 400px;
        }

            .register-card h2 {
                margin-bottom: 1.5rem;
                text-align: center;
                font-weight: bold;
            }

        .form-control {
            margin-bottom: 1rem;
        }

        .btn-register {
            width: 100%;
            font-weight: 600;
        }
    </style>
</head>
<body>

    <div class="register-card">
        <h2>Üye Ol</h2>

        <form method="post">
            <input asp-for="Input.Email" class="form-control" placeholder="E-Posta" required />
            <input asp-for="Input.Password" type="password" class="form-control" placeholder="Şifre" required />
            <input asp-for="Input.ConfirmPassword" type="password" class="form-control" placeholder="Şifre Tekrar" required />
            <div class="form-group">
                <label asp-for="Input.Role">Rol Seçiniz</label>
                <select asp-for="Input.Role" class="form-control" required>
                    <option value="">-- Rol Seçiniz --</option>
                    <option value="Admin">Admin</option>
                    <option value="PremiumUye">Premium Üye</option>
                    <option value="NormalUye">Normal Üye</option>
                </select>
            </div>

            <button type="submit" class="btn btn-success btn-register">Kayıt Ol</button>
        </form>

        @* Hata varsa göster *@
        @if (!ViewData.ModelState.IsValid)
        {
            <div class="alert alert-danger mt-2">
                <ul class="mb-0">
                    @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                    {
                        <li>@error.ErrorMessage</li>
                    }
                </ul>
            </div>
        }

    </div>

</body>
</html>
